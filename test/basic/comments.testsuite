testsuite Comments
topsort TypeDec

test basic end of line comment (1)
  "class Simple { // aa
   }
  " -> ClassDec([],_,None,None,ClassBody([]))

test basic end of line comment (2)
  "class Simple {// aa
   }
  " -> ClassDec([],_,None,None,ClassBody([]))

test basic long comment (1)
  "class Test { /* */ }" succeeds

test basic long comment (2)")
  "class Test {/* */}" succeeds

test Silly (1)
  "class Test { /* \\ */}" succeeds

test Silly (2)
  "class Test { /* \u */}" fails

test /* anything */ is a comment (1)
  "class T371 { /* / * // * / exit */ }" -> ClassDec([],_,None,None,ClassBody([]))

test /* anything */ is a comment (2)
  "class T371 { /* / * // * / exit */}" succeeds

test /* */ comment can span multiple lines
  "class T372 { /* hello
     bye
    */}
  " -> ClassDec([],_,None,None,ClassBody([]))

test // comment inside /* */ comment is ignored
  "class T373 { /* hello
   // */}"
   -> ClassDec([],_,None,None,ClassBody([]))

test // comment inside // comment is ignored
  "class T374 { // //
  }"
  -> ClassDec([],_,None,None,ClassBody([]))

test /* */ comment inside // comment is ignored
  "class T375 { // /*
   //*/
   }" -> ClassDec([],_,None,None,ClassBody([]))

test /* or // inside /* */ comment is ignored
  "class T376 { /* comment /* // /* */}"
   -> ClassDec([],_,None,None,ClassBody([]))

test /* or // inside /** */ comment is ignored
  "class T377 { /** comment /* // /* */}"
   -> ClassDec([],_,None,None,ClassBody([]))

test /**/ is a documentation comment
  "class T378 { /**/}"
   -> ClassDec([],_,None,None,ClassBody([]))

test // comment separates tokens
  "class T379 {int//
   i;}
  " succeeds

test /**/ comment separates tokens"
  "class T3710 {int/* */i;}"
  succeeds

